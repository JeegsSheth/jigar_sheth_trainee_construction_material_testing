<odoo>
  <data>

    <record model="ir.ui.view" id="customer_detail_tree_view">
      <field name="name">customer.detail.tree</field>
      <field name="model">customer.detail</field>
      <field name="arch" type="xml">
        <tree decoration-success="name=='cementtest'" decoration-info="name=='soiltest'" decoration-danger="name=='fieldtest'" decoration-warning="name=='steeltest'"  decoration-primary="name=='concretetest'">
          <field name="name"/>
          <field name="facilityname"/>
          <field name="contact"/>         
          <field name="email"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="customer_detail_form_view">
      <field name="name">customer.detail.form</field>
      <field name="model">customer.detail</field>
      <field name="arch" type="xml">
        <form string="Customer detail Form">
          <sheet>
            <group>
              <field name="name"/>
              <field name="contact"/>
              <field name="email"/>    
            </group>
            <group>
              <field name="facilityname"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="customer_detail_kanban_view" model="ir.ui.view">
        <field name="name">customer.detail.kanban</field>
        <field name="model">customer.detail</field>
        <field name="arch" type="xml">
          <kanban default_group_by="facilityname" class="o_kanban_dashboard" widget="color">
            <templates>
              <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_content">
                  <field name="name"/>
                  <field name="facilityname"/>
                  <field name="contact"/>
                  <field name="email"/>
                </div>
              </t>
            </templates>
          </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="customer_detail_graph_view">
      <field name="name">customer.detail.graph</field>
      <field name="model">customer.detail</field>
      <field name="arch" type="xml">
        <graph string="Customer Graph" type="line">
          
          <field name="name"/>
          <field name="facilityname"/>
        </graph>
      </field>
    </record>

    <record id="customer_detail_search_view" model="ir.ui.view">
        <field name="name">customer.detail.search</field>
        <field name="model">customer.detail</field>
        <field name="arch" type="xml">
            <search string="Customer Search">
                <field name="name" widget="selection"/>
                <group string="Group By">
                  <filter name="group_by_facility" string="Customer" context="{'group_by': 'name'}"/>
                  <filter name="group_by_facility" string="Facility" context="{'group_by': 'facilityname'}"/>
                </group>
            </search>
        </field>
    </record>
    
     <record model="ir.ui.view" id="testing_detail_tree_view">
          <field name="name">testing.detail.tree</field>
          <field name="model">testing.detail</field>
          <field name="arch" type="xml">
            <tree string="Lab Testing">
                <field name="custid"/>
                <field name="address"/>
                <field name="facilityname"/>
                <field name="testingstart"/>
                <field name="testingend"/>
            </tree>
          </field>
        </record>

      <record model="ir.ui.view" id="testing_detail_form_view">
        <field name="name">testing.detail.form</field>
        <field name="model">testing.detail</field>
        <field name="arch" type="xml">
          <form string="Lab Testing Form">
                <header>
                    <button name="action_inprogress" states="todo,completed" string="In Progress" type="object" class="btn-danger"/>
                    <button name="action_completed" states="todo,inprogress" string="Completed" type="object" class="btn-success"/>
                    <button name="action_todo" states="completed" string="To Do" type="object" class="btn-dark"/>
                    <field name="state" widget="statusbar" statusbar_visible="todo,inprogress,completed" clickable="True"/>
                </header>
            <sheet>
              <group>

                <field name="custid"/>
                <field name="address"/>
                <field name="facilityname"/>
                <field name="testingstart"/>
                <field name="testingend"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>

        <record model="ir.ui.view" id="testing_detail_calendar_view">
          <field name="name">testing.detail.calendar</field>
          <field name="model">testing.detail</field>
          <field name="arch" type="xml">
            <calendar string="Testing Duration" date_start="testingstart" date_stop="testingend" color="facilityname">
                
                <field name="custid"/>
                <field name="facilityname"/>  
                <field name="testingstart"/>
                <field name="testingend"/>
            </calendar>
          </field>
        </record>

    <report
        id="report_status"
        model="testing.detail"
        string="Status Report"
        name="cmt.report_status_view"
        file="cmt.status"
        report_type="qweb-pdf" />

    <template id="report_status_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                  <center>
                    <div class="page">
                        <h1>JS Industry</h1><br/><br/>
                        <table width="30%">
                          <tr>
                            <td>Cust Name :- </td>
                            <td><span t-field="doc.custid"/></td>
                          </tr>
                          <tr>
                            <td>Address :- </td>
                            <td><span t-field="doc.address"/></td>
                          </tr>
                          <tr>
                            <td>Testing Start Date :- </td>
                            <td><span t-field="doc.testingstart"/></td>
                          </tr>
                          <tr>
                            <td>Testing End Date :- </td>
                            <td><span t-field="doc.testingend"/></td>
                          </tr>
                          <tr>
                            <td>Testing State :- </td>
                            <td><span t-field="doc.state"/></td>
                          </tr>
                        </table>
                    </div>
                  </center>
                </t>
            </t>
        </t>
    </template>


    <record model="ir.actions.act_window" id="customer_detail_action">
      <field name="name">Customer Detail</field>
      <field name="res_model">customer.detail</field>
      <field name="view_mode">tree,form,kanban,graph</field>
    </record>

    <record model="ir.actions.act_window" id="testing_detail_action">
      <field name="name">Testing Detail</field>
      <field name="res_model">testing.detail</field>
      <field name="view_mode">tree,form,calendar</field>
    </record>

    <menuitem name="CMT" id="cmt_menu_root"/>
    <menuitem name="Inquiry" id="customer_detail_menu" parent="cmt_menu_root" action="customer_detail_action"/>
    <menuitem name="Testing" id="testing_detail_menu" parent="cmt_menu_root" action="testing_detail_action"/>

  </data>
</odoo>
 