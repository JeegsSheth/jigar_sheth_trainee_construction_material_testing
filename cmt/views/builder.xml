<odoo>
  <data>

    <record model="ir.ui.view" id="builder_registration_form">
      <field name="name">builder.registration.form</field>
      <field name="model">builder.registration</field>
      <field name="arch" type="xml">
        <form string="Lab Registration Form">
          <sheet>
            <group>
              <field name="name"/>
              <field name="buildercompname"/>
              <field name="buildercontact"/>
              <field name="builderemail"/>
            </group>
            <group>
              <field name="buildercompaddress"/>
              <field name="city"/>
              <field name="district"/>
              <field name="state"/>
              <field name="pincode"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="builder_registration_tree">
      <field name="name">builder.registration.tree</field>
      <field name="model">builder.registration</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="city"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="builder_registration_window">
      <field name="name">builder.registration.window</field>
      <field name="res_model">builder.registration</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Builder Registration" id="builder_registration_menu" parent="cmt_menu_root" action="builder_registration_window"/>
    
  </data>
</odoo>
