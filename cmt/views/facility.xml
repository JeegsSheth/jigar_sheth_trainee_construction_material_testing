<odoo>
  <data>

    <record model="ir.ui.view" id="laboratory_facility_form">
      <field name="name">laboratory.facility.form</field>
      <field name="model">laboratory.facility</field>
      <field name="arch" type="xml">
        <form string="Lab facility Form">
          <sheet>
            <group>
              <field name="name"/>
              <field name="labid"/>
              <field name="price"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="laboratory_facility_tree">
      <field name="name">laboratory.facility.tree</field>
      <field name="model">laboratory.facility</field>
      <field name="arch" type="xml">
        <tree string="Lab Facilities" decoration-success="name=='cementtest'" decoration-info="name=='soiltest'" decoration-danger="name=='fieldtest'" decoration-warning="name=='steeltest'"  decoration-primary="name=='concretetest'">
          <field name="name"/>
          <field name="labid"/>
          <field name="price"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="laboratory_facility_graph">
      <field name="name">laboratory.facility.graph</field>
      <field name="model">laboratory.facility</field>
      <field name="arch" type="xml">
        <graph string="Facility Graph" type="line">
          <field name="name"/>
          <field name="labid"/>
          <field name="price" type="measure"/>
        </graph>
      </field>
    </record>

    <record id="laboratory_facility_search" model="ir.ui.view">
        <field name="name">laboratory.facility.search</field>
        <field name="model">laboratory.facility</field>
        <field name="arch" type="xml">
            <search string="Facility Search">
                <field name="name" widget="selection"/>
                <group string="Group By">
                  <filter name="group_by_facility" string="Facility" context="{'group_by': 'name'}"/>
                  <filter name="group_by_facility" string="Lab" context="{'group_by': 'labid'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="laboratory_facility_kanban" model="ir.ui.view">
        <field name="name">laboratory.facility.kanban</field>
        <field name="model">laboratory.facility</field>
        <field name="arch" type="xml">
          <kanban class="o_kanban_dashboard" widget="color">
            <templates>
              <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_content">
                  <field name="name"/>
                  <field name="labid"/>
                  <field name="price"/>
                </div>
              </t>
            </templates>
          </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="laboratory_facility_window">
      <field name="name">laboratory.facility.window</field>
      <field name="res_model">laboratory.facility</field>
      <field name="view_mode">tree,form,graph,kanban</field>
    </record>

    <menuitem name="CMT" id="cmt_menu_root"/>
    <menuitem name="Facility" id="laboratory_facility_menu" parent="cmt_menu_root" action="laboratory_facility_window"/>
    
  </data>
</odoo>
