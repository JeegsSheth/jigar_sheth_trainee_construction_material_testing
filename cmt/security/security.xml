<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.module.category" id="module_security">
  	    <field name="name">CMT Module Access Security</field>
  		<field name="description">User access level for this module</field>
  		<field name="sequence">3</field>
	</record>
    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="cmt.module_security"/>
    </record>
    <record id="group_laboratory" model="res.groups">
        <field name="name">Laboratory</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="cmt.module_security"/>
    </record>
    <!-- <record id="group_laboratory" model="res.groups">
        <field name="name">Laboratory</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="cmt.module_security"/>
    </record> -->
    <record id="group_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="implied_ids" eval="[(4, ref('base.user_admin'))]"/>
        <field name="category_id" ref="cmt.module_security"/>
    </record>

    <record id="cmt_states_access" model="ir.rule">
        <field name="name">Only completed sessions can be seen by user</field>
        <field name="model_id" ref="model_testing_detail"/>
        <field name="groups" eval="[(4, ref('cmt.group_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[('state', '=','completed')]</field>
    </record>
</odoo>